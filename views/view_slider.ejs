<%- include("header") %>


            <!-- END HEADER DESKTOP-->

            <!-- MAIN CONTENT-->
            <div class="main-content">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="row">
                            <% if(locals.flash.success.length > 0 && locals.flash.success) {%>
                                <div class="alert alert-success">
                                     <%= locals.flash.success %> 
                                </div>
                            <% } %>
                            <% if(locals.flash.error.length > 0 && locals.flash.error) {%>
                                <div class="alert alert-success">
                                     <%= locals.flash.error %> 
                                </div>
                            <% } %>

                            <form>
                                <input class="au-input au-input--xl" type="text" name="search" value="<%=search%>" placeholder="Search" />
                                <input class="btn btn-danger btn-sm" type="submit" name="searching" value="search">
                                    
                            </form>
                            <div class="col-lg-12">
                                <div class="table-responsive table--no-card m-b-30">
                                    <table class="table table-borderless table-striped table-earning">
                                        <thead>
                                            <tr>
                                                <th>no</th>
                                                <th>title</th>
                                                <th>link</th>
                                                <th>description</th>
                                                <th>image</th>
                                                <th>status</th>
                                                <th>action</th>
                                                
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% var no=1; for(var ad of slidersData){ %>
                                            <tr>    
                                                <td><%= no++%></td>
                                                <td><%= ad.title %></td>
                                                <td><%= ad.link %></td>
                                                <td><%= ad.description.slice(0,30) %></td>
                                                <td>
                                                    <img src="<%= ad.sliderimage %>" alt="" height="100">
                                                </td>
                                                <td style="font-size: 25px;" >
                                                    <a href="/admin/deleteAdminRecord/<%= ad.id %>"><i class="fa fa-trash"></i></a>
                                                    <a href="/admin/updateAdminRecord?id=<%= ad.id %>"><i class="fa fa-edit"></i></i></a>
                                                </td>

                                                <td>
                                                    <% if(ad.status){ %>
                                                        <a class="btn btn-success" href="/admin/slider/deactive/<%= ad.id %>">Active</a>
                                                    <% } else{  %>
                                                            
                                                        <a class="btn btn-danger" href="/admin/slider/active/<%= ad.id %>">deactive</a>
                                                    <% } %>
                                                </td>
                                            </tr>
                                            <% } %>

                                            <tr>
                                                <td colspan="9">
                                                    <%for(var i=0; i<totalPage;) {%>
                                                        <a class="btn btn-success" href="/admin/slider/view_slider/?page=<%= i %>"><%= ++i %></a>
                                                    <%}%>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                       
                        

<%- include("footer") %>